'use strict';

var user = prompt('Is the user name Kevin?' 'y/n');
if (user.toUpperCase() === 'YES' || user.toUpperCase() === 'Y'){
  console.log('user: ', user);
  alert('Greeting, Kevin. HOOYA, NAVY!!');
} else {
  console.log('not kevin');
  alert('GO AWAY');
}

var vet = prompt('Are you a Vet?' 'y/n');
if (vet.toUpperCase() === 'YES' || user.toUpperCase() === 'Y' ){
  console.log('vet: ', vet);
  alert('Thank you for your service.');
} else {
  console.log('not vet');
  alert('Stay Safe.');
}

